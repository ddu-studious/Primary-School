.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.menu-item:active {
  transform: scale(0.98);
}

.menu-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 10px;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
}

.welcome {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.tips {
  color: #666;
  font-size: 16px;
} 