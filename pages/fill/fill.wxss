.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.question-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.word {
  font-size: 48rpx;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.pinyin-container {
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 36rpx;
  color: #666;
}

.missing {
  color: #ff4d4f;
  font-weight: bold;
}

.options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.option {
  background: #f0f0f0;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s;
}

.option.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.option.correct {
  background: #f6ffed;
  border: 2rpx solid #52c41a;
}

.option.wrong {
  background: #fff2f0;
  border: 2rpx solid #ff4d4f;
}

.feedback {
  margin-top: 30rpx;
  text-align: center;
}

.feedback-text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.feedback-text.correct {
  color: #52c41a;
}

.feedback-text.wrong {
  color: #ff4d4f;
}

.next-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.result {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  margin-top: 40rpx;
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.result-score {
  font-size: 36rpx;
  color: #07c160;
  margin-bottom: 30rpx;
}

.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.restart-btn {
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
} 