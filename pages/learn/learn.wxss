.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

.content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.pinyin-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.pinyin-item {
  width: 48%;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.pinyin {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.example {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.play-btn {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.play-btn.playing {
  background-color: #ff9800;
  transform: scale(0.95);
} 