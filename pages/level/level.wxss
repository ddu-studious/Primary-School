.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.level-info {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.progress {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 20rpx;
}
.question {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}
.options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
  align-items: center;
}
.option-btn {
  background: #fff;
  color: #333;
  font-size: 36rpx;
  border-radius: 12rpx;
  padding: 24rpx 60rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  margin-bottom: 10rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}
.result {
  font-size: 32rpx;
  color: #ff9800;
  margin-top: 30rpx;
  text-align: center;
}
.passed, .failed {
  text-align: center;
  margin-top: 40rpx;
}
.next-btn, .retry-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.failed .retry-btn {
  background: #ff4d4f;
} 