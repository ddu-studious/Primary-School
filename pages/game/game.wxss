/* pages/game/game.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}
.score {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 36rpx;
  text-shadow: 0 2rpx 8rpx #b7f5d8;
}
.pinyin-area {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.pinyin-card {
  background: #fff;
  border-radius: 16rpx;
  font-size: 48rpx;
  color: #333;
  padding: 30rpx 40rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.play-btn {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 30rpx;
  padding: 18rpx 60rpx;
  margin-bottom: 30rpx;
}
.options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.difficulty-bar {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 16rpx;
}
.difficulty-btn-bar {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 18rpx;
}
.diff-btn {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 18rpx;
  padding: 10rpx 36rpx;
  font-size: 28rpx;
  margin: 0 6rpx;
  box-shadow: 0 2rpx 8rpx #b7e3ff;
  transition: background 0.1s, color 0.1s;
}
.diff-btn.active {
  background: linear-gradient(90deg, #1890ff 60%, #34d399 100%);
  color: #fff;
}
.diff-btn2 {
  background: #fff;
  color: #07c160;
  border: 2rpx solid #07c160;
  border-radius: 22rpx;
  padding: 14rpx 48rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx #b7f5d8;
  transition: background 0.1s, color 0.1s;
}
.diff-btn2.active {
  background: linear-gradient(90deg, #07c160 60%, #34d399 100%);
  color: #fff;
}
.grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
  font-size: 44rpx;
  color: #333;
  padding: 36rpx 0;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.08);
  min-width: 90rpx;
  min-height: 90rpx;
  transition: transform 0.1s, box-shadow 0.1s;
  font-weight: bold;
}
.options-row {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.center-row {
  align-items: center;
}
.option-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  color: #07c160;
  font-size: 38rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  width: 110rpx;
  height: 90rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.10);
  border: 2rpx solid #07c160;
  margin-bottom: 0;
  transition: background 0.1s, color 0.1s, transform 0.1s;
  font-weight: bold;
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
}
.option-btn:active {
  background: #e6f7ff;
  color: #1890ff;
  transform: scale(1.06);
}
.option-btn.selected {
  border: 2rpx solid #1890ff;
  background: #e6f7ff;
}
.option-btn.correct {
  background: #f6ffed;
  border: 2rpx solid #52c41a;
  color: #52c41a;
}
.option-btn.wrong {
  background: #fff2f0;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
}
.result {
  font-size: 34rpx;
  color: #ff9800;
  margin-top: 36rpx;
  text-align: center;
  font-weight: bold;
}
.next-btn {
  background: linear-gradient(90deg, #1890ff 60%, #34d399 100%);
  color: #fff;
  border-radius: 30rpx;
  padding: 24rpx 70rpx;
  font-size: 34rpx;
  margin-top: 28rpx;
  box-shadow: 0 2rpx 8rpx #b7e3ff;
}
.game-type-bar {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}
.type-btn {
  background: #fff;
  color: #07c160;
  border: 2rpx solid #07c160;
  border-radius: 20rpx;
  padding: 16rpx 48rpx;
  font-size: 30rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.10);
  transition: background 0.1s, color 0.1s;
}
.type-btn.active {
  background: linear-gradient(90deg, #07c160 60%, #34d399 100%);
  color: #fff;
}
.desc {
  text-align: center;
  color: #1890ff;
  font-size: 30rpx;
  margin-bottom: 24rpx;
  font-weight: bold;
}
.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 30rpx;
}
.level-bar {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}
.level-btn {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 18rpx;
  padding: 10rpx 28rpx;
  font-size: 26rpx;
  margin: 0 4rpx 8rpx 4rpx;
  box-shadow: 0 2rpx 8rpx #b7e3ff;
  transition: background 0.1s, color 0.1s;
}
.level-btn.active {
  background: linear-gradient(90deg, #1890ff 60%, #34d399 100%);
  color: #fff;
}
.difficulty-label {
  color: #1890ff;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-align: center;
  width: 100%;
}
.matrix {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  min-height: 300rpx;
}
.matrix-row {
  display: flex;
  gap: 10rpx;
}
.option-btn {
  min-width: 70rpx;
  min-height: 60rpx;
  width: 8vw;
  height: 8vw;
  max-width: 110rpx;
  max-height: 90rpx;
  font-size: 3.5vw;
  padding: 0;
}
@media screen and (max-width: 400px) {
  .option-btn {
    font-size: 12px;
    min-width: 40rpx;
    min-height: 40rpx;
  }
}
.big-label {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
}
.help-btn {
  display: inline-block;
  margin-left: 12rpx;
  color: #1890ff;
  font-size: 28rpx;
  background: #e6f7ff;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx #b7e3ff;
}
.matrix-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}
.main-desc {
  margin-bottom: 24rpx;
  font-size: 30rpx;
  color: #1890ff;
  font-weight: bold;
  text-align: center;
}
.option-btn {
  border: 2rpx solid #07c160;
  color: #1890ff;
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  background: #fff;
  box-shadow: 0 2rpx 8rpx #b7f5d8;
  transition: background 0.1s, color 0.1s, transform 0.1s, box-shadow 0.1s;
}
.option-btn:active, .option-btn.active {
  background: #e6f7ff;
  color: #07c160;
  transform: scale(1.08);
  box-shadow: 0 8rpx 24rpx #b7f5d8;
}
.animated-btn {
  animation: popIn 0.3s;
}
@keyframes popIn {
  0% { transform: scale(0.7); opacity: 0.5; }
  100% { transform: scale(1); opacity: 1; }
}
.modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.25);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 30rpx 30rpx;
  min-width: 480rpx;
  box-shadow: 0 8rpx 32rpx #b7e3ff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 20rpx;
}
.modal-body {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  text-align: left;
}
.modal-close {
  background: #07c160;
  color: #fff;
  border-radius: 20rpx;
  padding: 12rpx 48rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.grid-3d {
  background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
  border: 2rpx solid #07c160;
  border-radius: 22rpx;
  box-shadow: 0 6rpx 18rpx #b7f5d8, 0 2rpx 8rpx #34d399;
  color: #1890ff;
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  transition: box-shadow 0.2s, transform 0.2s, background 0.2s, color 0.2s;
  position: relative;
  overflow: hidden;
}
.grid-3d:active, .grid-3d.active {
  background: linear-gradient(135deg, #b2ff59 0%, #69f0ae 100%);
  color: #fff;
  box-shadow: 0 16rpx 32rpx #34d399;
  z-index: 2;
}
.grid-3d.shake {
  animation: shake 0.3s;
}
@keyframes shake {
  0% { transform: translateX(0); }
  20% { transform: translateX(-8rpx); }
  40% { transform: translateX(8rpx); }
  60% { transform: translateX(-8rpx); }
  80% { transform: translateX(8rpx); }
  100% { transform: translateX(0); }
}