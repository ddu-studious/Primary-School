.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.profile-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 40rpx;
  text-align: center;
}
.profile-item {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.wrong-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.wrong-item {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}
.clear-btn {
  width: 60%;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 30rpx;
  padding: 18rpx 0;
  margin: 0 auto;
  display: block;
} 