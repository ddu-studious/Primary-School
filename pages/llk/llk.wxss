.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.llk-area {
  display: flex;
  justify-content: space-between;
  gap: 40rpx;
}
.llk-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}
.llk-word, .llk-pinyin {
  background: #fff;
  border-radius: 12rpx;
  font-size: 40rpx;
  color: #333;
  padding: 30rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  transition: background 0.2s;
}
.llk-word[style*='#e0ffe0'] {
  color: #07c160;
  font-weight: bold;
}
.result {
  font-size: 32rpx;
  color: #ff9800;
  margin-top: 40rpx;
  text-align: center;
} 