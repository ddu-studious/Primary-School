.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #f8fafc 0%, #e0f7fa 100%);
}
.login-title {
  font-size: 40rpx;
  color: #ff9800;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.login-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 48rpx;
}
.login-btn {
  background: linear-gradient(90deg, #a1c4fd 0%, #c2e9fb 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 32rpx;
  padding: 20rpx 66rpx;
  box-shadow: 0 6rpx 24rpx rgba(33,150,243,0.12);
} 