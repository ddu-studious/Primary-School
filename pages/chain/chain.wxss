.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.chain-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  text-align: center;
}
.chain-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
  justify-content: center;
}
.chain-item {
  background: #e0ffe0;
  color: #333;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}
.input {
  width: 60%;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 30rpx;
}
.submit-btn {
  width: 60%;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 30rpx;
  padding: 18rpx 0;
  margin-bottom: 30rpx;
}
.result {
  font-size: 32rpx;
  color: #ff9800;
  margin-top: 20rpx;
} 