.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.score {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.current {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.chain-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  text-align: center;
}
.chain-list {
  margin-bottom: 30rpx;
  color: #666;
  font-size: 28rpx;
  word-break: break-all;
}
.chain-item {
  background: #e0ffe0;
  color: #333;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}
.input {
  width: 80%;
  margin: 0 auto 20rpx auto;
  padding: 18rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  background: #fff;
  display: block;
}
.submit-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.result {
  font-size: 32rpx;
  color: #ff9800;
  margin-top: 30rpx;
  text-align: center;
}
.restart-btn {
  background: #07c160;
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
} 