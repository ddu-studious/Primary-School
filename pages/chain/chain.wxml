<view class="container">
  <view class="score">得分：{{score}}</view>
  <view class="chain-area">
    <view class="chain-list">
      <view class="chain-item" wx:for="{{chainList}}" wx:key="pinyin">{{item.word}}({{item.pinyin}})</view>
    </view>
    <input class="input" placeholder="请输入下一个拼音" value="{{userInput}}" bindinput="onInput" />
    <button class="submit-btn" bindtap="submit">提交</button>
    <view class="result" wx:if="{{showResult}}">{{result}}</view>
  </view>
</view> 